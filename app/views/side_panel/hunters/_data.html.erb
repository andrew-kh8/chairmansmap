<div class="rounded-lg p-8 flex flex-col w-full shadow-2xl" style="height: 65vh;">
    <ul role="list" class="divide-y divide-gray-200 dark:divide-gray-700 overflow-y-auto h-full">
        <div id="hunter_data" class="flex flex-col h-full">
            <% hunter_locations.each do |hunter| %>
            <li class="p-1 my-1 bg-gray-50 shadow-2xl">
                <div class="flex items-center space-x-4">
                    <div class="flex-1 min-w-0">
                        <p class="text-base font-medium truncate">
                            <%=hunter.description%>
                        </p>
                        <p class="text-sm text-gray-500 truncate">
                            <%=[hunter.dog ? "с собакой" : nil, hunter.license ? "с оружием" : nil].compact.join(", ") %>
                        </p>
                    </div>
                    <div class="inline-flex items-center text-base font-semibold text-gray-900 dark:text-white">
                        <%=hunter.date.strftime("%d.%m.%Y %H:%M")%>
                    </div>
                </div>
            </li>
            <%end%>
        </div>
    </ul>

    <%= link_to "Добавить", new_side_panel_hunter_path, class: "mt-4 text-center inset-x-0 bottom-0 text-white bg-indigo-500 border-0 py-2 px-6 enabled:focus:outline-none enabled:hover:bg-indigo-900 rounded text-lg"%>

</div>
