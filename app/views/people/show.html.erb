<div class="min-h-full bg-white">
    <div class="max-w-7xl mx-auto px-6 py-8">
        <!-- Заголовок и действия -->
        <div class="flex justify-between items-start mb-8">
            <div>
                <h1 class="text-3xl font-bold text-gray-900">Профиль пользователя</h1>
            </div>
            <div class="flex space-x-4">
                <%= link_to "Редактировать профиль", edit_person_path(person), class: "bg-indigo-500 text-white px-6 py-2 rounded-lg hover:bg-indigo-600 transition duration-200 font-medium"%>
                <button class="border border-red-300 text-red-600 px-6 py-2 rounded-lg hover:bg-red-50 transition duration-200 font-medium">
                    Архивировать
                </button>
            </div>
        </div>

        <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
            <!-- Левая колонка - фото и основная информация -->
            <div class="lg:col-span-1 space-y-6">
                <!-- Фотография -->
                <div class="bg-white rounded-xl border border-gray-200 p-6">
                    <div class="flex flex-col items-center mb-4">
                        <div class="w-32 h-32 bg-indigo-100 rounded-full flex items-center justify-center mb-4">
                            <span class="text-indigo-600 text-2xl font-bold">^)</span>
                        </div>
                        <h2 class="text-xl font-semibold text-gray-900 text-center"><%= person.full_name%></h2>
                        <% if person.kept? %>
                            <p class="text-green-600 text-sm font-medium mt-2 px-3 py-1 bg-green-100 rounded-full">Активный</p>
                        <% else %>
                            <p class="text-gray-800 text-sm font-medium mt-2 px-3 py-1 bg-gray-100 rounded-full">Архивный</p>
                        <% end %>
                    </div>

                    <!-- Основная информация -->
                    <div class="space-y-4">
                        <div class="flex items-start">
                            <div class="w-6 text-gray-400 mt-1">
                                <svg fill="currentColor" viewBox="0 0 20 20" class="w-5 h-5">
                                    <path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z" />
                                </svg>
                            </div>
                            <div class="ml-3">
                                <p class="text-sm font-medium text-gray-900">Телефон</p>
                                <p class="text-sm text-gray-600"><%= person.tel%></p>
                            </div>
                        </div>
                        <div class="flex items-start">
                            <div class="w-6 text-gray-400 mt-1">
                                <svg fill="currentColor" viewBox="0 0 20 20" class="w-5 h-5">
                                    <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd" />
                                </svg>
                            </div>
                            <div class="ml-3">
                                <p class="text-sm font-medium text-gray-900">Адрес</p>
                                <p class="text-sm text-gray-600"><%= person.address%></p>
                            </div>
                        </div>
                        <div class="flex items-start">
                            <div class="w-6 text-gray-400 mt-1">
                                <svg fill="currentColor" viewBox="0 0 20 20" class="w-5 h-5">
                                    <path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd" />
                                </svg>
                            </div>
                            <div class="ml-3">
                                <p class="text-sm font-medium text-gray-900">Дата регистрации</p>
                                <p class="text-sm text-gray-600"><%= person.created_at.strftime("%d.%m.%Y")%></p>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Статистика -->
                <div class="bg-white rounded-xl border border-gray-200 p-6">
                    <h3 class="text-lg font-semibold text-gray-900 mb-4">Статистика</h3>
                    <div class="grid grid-cols-2 gap-4">
                        <div class="text-center">
                            <p class="text-2xl font-bold text-indigo-600"><%= person_plots.size %></p>
                            <p class="text-sm text-gray-600">Участков</p>
                        </div>
                        <div class="text-center">
                            <p class="text-2xl font-bold text-indigo-600"><%= person_plots.sum(:area).round / 100 %> сот.</p>
                            <p class="text-sm text-gray-600">Общая площадь</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Правая колонка - список участков -->
            <div class="lg:col-span-2">
                <div class="bg-white rounded-xl border border-gray-200">
                    <div class="p-6 border-b border-gray-200">
                        <h3 class="text-xl font-semibold text-gray-900">Список участков</h3>
                    </div>

                    <div class="divide-y divide-gray-200">
                        <!-- Участок -->
                        <% person_plots.each do |plot| %>
                        <div class="p-6 hover:bg-gray-50 transition duration-150">
                            <div class="flex justify-between items-start">
                                <div class="flex-1">
                                    <div class="flex items-center space-x-3 mb-2">
                                        <h4 class="text-lg font-medium text-gray-900">Участок №<%=plot.number%></h4>
                                        <span class="px-2 py-1 bg-green-100 text-green-800 text-xs rounded-full">Активный</span>
                                        <span class="px-2 py-1 bg-gray-100 text-gray-800 text-xs rounded-full">Архивный</span>
                                    </div>
                                    <div class="grid grid-cols-2 gap-4 text-sm">
                                        <div>
                                            <p class="text-gray-600">Кадастровый номер</p>
                                            <p class="font-medium"><%=plot.plot_datum.cadastral_number%></p>
                                        </div>
                                        <div>
                                            <p class="text-gray-600">Дата покупки</p>
                                            <p class="font-medium">15.01.2023</p>
                                        </div>
                                        <div>
                                            <p class="text-gray-600">Площадь</p>
                                            <p class="font-medium"><%=plot.area%> м</p>
                                        </div>
                                        <div>
                                            <p class="text-gray-600">Статус</p>
                                            <p class="font-medium"><%=plot.plot_datum.owner_type%></p>
                                        </div>
                                    </div>
                                </div>
                                <%= link_to "Перейти →", plot, class: "ml-4 text-indigo-600 hover:text-indigo-800 font-medium text-sm"%>
                            </div>
                        </div>
                        <%end%>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>