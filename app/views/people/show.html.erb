<head>
    <link rel="stylesheet" href="https://horizon-tailwind-react-git-tailwind-components-horizon-ui.vercel.app/static/css/main.ad49aa9b.css" />
</head>

<div class="content-center items-center">

  <%= link_to "Back", people_path %>
  
  <h1 class="font-thinner flex text-4xl py-6 px-5"><%=@person.full_name%><a href=<%=edit_person_path(@person)%>>&#10000;</a></h1>

    <div class="flex flex-col">
        <div class="relative flex flex-col w-[700px] max-w-[95%]  bg-white bg-clip-border p-3">
            <div class="grid gap-4 px-2 w-full">
                <div class="flex flex-col items-start justify-center rounded-2xl bg-white bg-clip-border px-3 py-4 shadow-3xl shadow-shadow-500">
                    <p class="text-sm text-gray-600">Фио</p>
                    <p class="text-base font-medium text-navy-700 dark:text-white">
                        <%=@person.full_name%>
                    </p>
                </div>

                <div class="flex flex-col justify-center rounded-2xl bg-white bg-clip-border px-3 py-4 shadow-3xl shadow-shadow-500 dark:!bg-navy-700 dark:shadow-none">
                    <p class="text-sm text-gray-600">Телефон</p>
                    <p class="text-base font-medium text-navy-700 dark:text-white">
                        <%=@person.tel%>
                    </p>
                </div>

                <div class="flex flex-col items-start justify-center rounded-2xl bg-white bg-clip-border px-3 py-4 shadow-3xl shadow-shadow-500 dark:!bg-navy-700 dark:shadow-none">
                    <p class="text-sm text-gray-600">Адрес</p>
                    <p class="text-base font-medium text-navy-700 dark:text-white">
                        <%=@person.address%>
                    </p>
                </div>

                <div class="flex flex-col justify-center rounded-2xl bg-white bg-clip-border px-3 py-4 shadow-3xl shadow-shadow-500 dark:!bg-navy-700 dark:shadow-none">
                    <p class="text-sm text-gray-600">Дата рождения</p>
                    <p class="text-base font-medium text-navy-700 dark:text-white">
                        <%=@person.birth%>
                    </p>
                </div>

                <div class="flex flex-col items-start justify-center rounded-2xl bg-white bg-clip-border px-3 py-4 shadow-3xl shadow-shadow-500 dark:!bg-navy-700 dark:shadow-none">
                    <p class="text-sm text-gray-600">Участник с</p>
                    <p class="text-base font-medium text-navy-700 dark:text-white">
                        <%=@person.member_from%>
                    </p>
                </div>

                <div class="flex flex-col justify-center rounded-2xl bg-white bg-clip-border px-3 py-4 shadow-3xl shadow-shadow-500 dark:!bg-navy-700 dark:shadow-none">
                    <p class="text-sm text-gray-600">Исключен</p>
                    <p class="text-base font-medium text-navy-700 dark:text-white">
                        <%=@person.discarded_at || "-"%>
                    </p>
                </div>
            </div>
        </div>  
    </div>

</div>
