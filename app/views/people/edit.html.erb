<div class="">
    <div class="max-w-2xl mx-auto px-6">

        <div class="bg-white rounded-xl border border-gray-200 p-8">

            <h1 class="text-3xl text-center font-bold text-gray-900">Редактирование профиля</h1>
            <%= form_for :person, method: :patch, url: person_path(@person), class: "space-y-8" do |f|%>

            <!-- Фотография -->
            <div class="flex flex-col items-center">
                <div class="relative mb-4">
                    <div class="w-32 h-32 bg-indigo-100 rounded-full flex items-center justify-center">
                        <span class="text-indigo-600 text-2xl font-bold">ИИ</span>
                    </div>
                    <button type="button" class="absolute bottom-0 right-0 bg-indigo-500 text-white p-2 rounded-full hover:bg-indigo-600 transition duration-200">
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 9a2 2 0 012-2h.93a2 2 0 001.664-.89l.812-1.22A2 2 0 0110.07 4h3.86a2 2 0 011.664.89l.812 1.22A2 2 0 0018.07 7H19a2 2 0 012 2v9a2 2 0 01-2 2H5a2 2 0 01-2-2V9z" />
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 13a3 3 0 11-6 0 3 3 0 016 0z" />
                        </svg>
                    </button>
                </div>
                <p class="text-sm text-gray-500">Нажмите на иконку чтобы изменить фото</p>
            </div>

            <!-- ФИО -->
            <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                <div>
                    <%= f.label :surname, "Фамилия", class: "block text-sm font-medium text-gray-700 mb-2" %>
                    <%= f.text_field :surname, 
            class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition duration-200" %>
                </div>
                <div>
                    <%= f.label :first_name, "Имя", class: "block text-sm font-medium text-gray-700 mb-2" %>
                    <%= f.text_field :first_name, 
            class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition duration-200" %>
                </div>
                <div>
                    <%= f.label :middle_name, "Отчество", class: "block text-sm font-medium text-gray-700 mb-2" %>
                    <%= f.text_field :middle_name, 
            class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition duration-200" %>
                </div>
            </div>

            <!-- Телефон -->
            <div>
                <%= f.label :tel, "Телефон", class: "block text-sm font-medium text-gray-700 mb-2" %>
                <%= f.telephone_field :tel, 
          class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition duration-200" %>
            </div>

            <!-- Адрес -->
            <div>
                <%= f.label :address, "Адрес", class: "block text-sm font-medium text-gray-700 mb-2" %>
                <%= f.text_area :address, rows: 3,
          class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition duration-200 resize-none" %>
            </div>

            <!-- Кнопки действий -->
            <div class="flex justify-end space-x-4">
                <%= link_to "Отмена", person_path(@person), 
          class: "px-6 py-3 border border-gray-300 text-gray-700 rounded-lg hover:bg-gray-50 transition duration-200 font-medium" %>
                <%= f.submit "Сохранить изменения", 
          class: "px-6 py-3 bg-indigo-500 text-white rounded-lg hover:bg-indigo-600 transition duration-200 font-medium cursor-pointer" %>
            </div>
            <%end%>
        </div>
    </div>
</div>